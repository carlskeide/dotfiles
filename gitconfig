[user]
	email = carl.skeide@sony.com
	name = Carl Skeide

[github]
	user = carlskeide

[push]
	default = simple
	followTags = true

[core]
	excludesfile = ~/.gitignore

[diff]
	# Detect copies as well as renames
	renames = copies

[merge]
	log = true
	tool = sublimerge

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	s = status -s
	st = status
	co = checkout
	a = add
    mm = merge upstream/master
    md = merge upstream/develop
    po = push origin
	c = commit -av
	d = diff --patch-with-stat
	lg = log --graph --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=relative
	lgg = log --decorate --graph --all
	r = remote -v
    g = grep

	del = reset HEAD
	rev = checkout HEAD --

	sync = !git fetch --all --prune && git pull
    sync-master = !git switch master && git fp && git mm && git po
    sync-dev = !git switch develop && git fp && git md && git po

	rsync = !git-sync-recursive
	bump = !git-bump-version

	switch = !legit switch
	publish = !legit publish
	unpublish = !legit unpublish
	undo = !legit undo
	branches = !legit branches

